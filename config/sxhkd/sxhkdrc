#
# wm independent hotkeys
#

# terminal emulator
super + Return
	/usr/bin/kitty

# program launcher
super + d
	rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/polybar/scripts/rofi/launcher.rasi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + alt + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Move a floating window
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# BSPWM Resize
super + alt + {Left,Down,Up,Right}
	~/.config/bspwm/scripts/bspwm_resize {west,south,north,east}

#
# Xrandr
#

super + shift + x
	~/.config/bspwm/scripts/xrandr

#
# Application Shortcuts
#

# Open Blueman
super + shift + b
	blueman-manager

# Open Chrome
super + shift + f
	flatpak run com.google.Chrome

# Open Ranger
super + shift + r
	kitty -e ranger

# Open Spotify
super + shift + s
	flatpak run com.spotify.Client

#
# System Controls
#

# Screen Lock
super + shift + l
	/usr/bin/i3lock-fancy

# Increase screen brightness
super + shift + Up
	brightnessctl set +10%

# Decrease screen brightness
super + shift + Down
	brightnessctl set 10%-

# Toggle touchpad
super + shift + p
	synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')

# Restart Network Manager
super + shift + n
	sudo systemctl restart NetworkManager

#
# Volume Controls
#

# Increase volume
ctrl + shift + Up
	pamixer --increase 5

# Decrease the volume
ctrl + shift + Down
	pamixer --decrease 5

# Mute/Restore volume
ctrl + shift + m
	pamixer --toggle-mute

#
# Workspace Management
#

# Move window to the next monitor
super + shift + m
	bspc node -d next

# Move window to the previous monitor
super + shift + n
	bspc node -d prev

# Switch to the next monitor
super + period
	bspc monitor -f next

# Switch to the previous monitor
super + comma
	bspc monitor -f prev

#
# Media Controls
#

# Play/Pause media
super + shift + p
	playerctl play-pause

# Next track
super + shift + period
	playerctl next

# Previous track
super + shift + comma
	playerctl previous

#
# ScreenShots
#

@Print
	flameshot screen -c

ctrl + @Print
	flameshot gui -c
