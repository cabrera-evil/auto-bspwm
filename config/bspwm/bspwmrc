#!/bin/bash

# Detect connected monitors and assign workspaces
workspace_names=("1" "2" "3" "4" "5")
monitor_index=0

xrandr_output=$(xrandr -q)
while IFS= read -r line; do
    if [[ $line =~ ([A-Za-z0-9\-]+)\s+connected ]]; then
        monitor="${BASH_REMATCH[1]}"
        bspc monitor "$monitor" -d "${workspace_names[@]}"
        ((monitor_index++))
    fi
done <<< "$xrandr_output"

# Configure BSPWM settings
bspc config border_width 0
bspc config window_gap 10
bspc config split_ratio 0.50
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config paddingless_monocle true
bspc config focus_follows_pointer true
bspc config pointer_modifier mod1
bspc config normal_border_color '#1f1f1f'
bspc config focused_border_color '#30302f'
bspc config presel_feedback_color '#512da8'

# Terminate already running instances
for process in "sxhkd" "polybar" "dunst"; do
    if pgrep -f "$process"; then
        pkill -f "$process" >/dev/null
    fi
done

# Set wallpaper
feh --bg-fill $HOME/Pictures/Wallpapers/archkali.png &

# Launch sxhkd
sxhkd -c $HOME/.config/sxhkd/sxhkdrc &

# Launch Picom
picom -b --config $HOME/.config/picom/picom.conf &

# Launch polybar for each monitor
for monitor in $(bspc query -M --names); do
    MONITOR="$monitor" polybar -c $HOME/.config/polybar/config.ini &
done

# Launch dunst
dunst -config $HOME/.config/dunst/dunstrc &
